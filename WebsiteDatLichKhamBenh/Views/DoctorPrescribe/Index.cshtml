
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kê Thuốc</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #f8f9fa;
        }

        .sidebar {
            min-width: 250px;
            background-color: #343a40;
            color: #fff;
            min-height: 100vh;
        }

            .sidebar .nav-link {
                color: #fff;
            }

                .sidebar .nav-link:hover {
                    background-color: #495057;
                }

        .content {
            padding: 20px;
        }

        .header {
            padding: 15px;
            border-bottom: 1px solid #dee2e6;
            background-color: #fff;
        }

            .header .admin-info {
                float: right;
            }

                .header .admin-info a {
                    margin-left: 15px;
                    color: #343a40;
                }
    </style>
</head>
<body>
    <div class="d-flex">
        <nav class="sidebar d-flex flex-column p-3">
            <a href="dashboard.html" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                <i class="fas fa-user-md fa-2x me-2"></i>
                <span class="fs-4">Trang Bác Sĩ</span>
            </a>
            <hr>
            <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item">
                    <a href="Quanlycakham.html" class="nav-link text-white">
                        <i class="fas fa-calendar-plus me-2"></i> Đăng Ký Ca Khám
                    </a>
                </li>
                <li>
                    <a href="quanlylichhen.html" class="nav-link text-white">
                        <i class="fas fa-calendar-check me-2"></i> Quản Lý Lịch Hẹn
                    </a>
                </li>
                <li>
                    <a href="quanlykethuoc.html" class="nav-link text-white">
                        <i class="fas fa-prescription-bottle-alt me-2"></i> Quản Lý Kê Thuốc
                    </a>
                </li>
            </ul>
            <hr>
            <div class="admin-info">
                <a href="#"><i class="fas fa-sign-out-alt"></i> Đăng Xuất</a>
            </div>
        </nav>
        <div class="content flex-grow-1">
            <header class="header d-flex justify-content-between align-items-center">
                <h2>Kê Thuốc cho Ca Khám CK001</h2>
                <div class="admin-info">
                    <span>Chào, Bác Sĩ</span>
                </div>
            </header>
            <form>
                <div class="mb-3">
                    <label for="medicineSelect" class="form-label">Chọn Thuốc</label>
                    <select class="form-select" id="medicineSelect" required>
                        <option value="">Chọn thuốc...</option>
                        <option value="1">Paracetamol - 500mg</option>
                        <option value="2">Amoxicillin - 250mg</option>
                        <option value="3">Ibuprofen - 400mg</option>
                        <!-- Thêm các thuốc khác ở đây -->
                    </select>
                </div>
                <div class="mb-3">
                    <label for="dosage" class="form-label">Liều Lượng</label>
                    <input type="text" class="form-control" id="dosage" placeholder="Nhập liều lượng" required>
                </div>
                <div class="mb-3">
                    <label for="quantity" class="form-label">Số Lượng</label>
                    <input type="number" class="form-control" id="quantity" min="1" required>
                </div>
                <div class="mb-3">
                    <label for="notes" class="form-label">Ghi Chú</label>
                    <textarea class="form-control" id="notes" rows="3"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Kê Thuốc</button>
                <button type="button" class="btn btn-secondary" onclick="window.history.back();">Quay Lại</button>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
