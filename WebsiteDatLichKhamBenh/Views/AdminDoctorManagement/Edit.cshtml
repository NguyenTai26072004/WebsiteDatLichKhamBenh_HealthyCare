@model WebsiteDatLichKhamBenh.Models.BacSi

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Sửa Bác Sĩ</h2>

@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(m => m.idBS)
    @Html.HiddenFor(m => m.idAccount)
    @Html.HiddenFor(m => m.luotDat)
    @Html.HiddenFor(m => m.diemDanhGia)

    <div class="form-group">
        @Html.Label("tenBS", "Tên bác sĩ:")
        @Html.TextBoxFor(m => m.tenBS, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.tenBS)
    </div>

    <div class="form-group">
        @Html.Label("chuyenKhoa", "Chuyên khoa:")
        @Html.TextBoxFor(m => m.chuyenKhoa, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.chuyenKhoa)
    </div>

    <div class="form-group">
        @Html.Label("anhBS", "Ảnh bác sĩ:")
        <input type="file" name="imageFile" class="form-control" />
        @Html.ValidationMessageFor(m => m.anhBS)
    </div>

    <button type="submit" class="btn btn-primary">Cập nhật</button>
    @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-secondary" })
}