@model WebsiteDatLichKhamBenh.Models.BacSi

@{
    ViewBag.Title = "Xóa bác sĩ";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Xóa Bác Sĩ</h2>

<p>Bạn có chắc chắn muốn xóa bác sĩ <strong>@Model.tenBS</strong>?</p>

@using (Html.BeginForm("DeleteConfirmed", "AdminDoctorManagement", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.Hidden("id", Model.idBS)

    <button type="submit" class="btn btn-danger">Xóa</button>
    @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-secondary" })
}
