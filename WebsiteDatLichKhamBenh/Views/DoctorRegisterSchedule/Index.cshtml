
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng Ký Ca Khám</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #f8f9fa;
        }

        .sidebar {
            min-width: 250px;
            background-color: #343a40;
            color: #fff;
            min-height: 100vh;
        }

            .sidebar .nav-link {
                color: #fff;
            }

                .sidebar .nav-link:hover {
                    background-color: #495057;
                }

        .content {
            padding: 20px;
        }

        .header {
            padding: 15px;
            border-bottom: 1px solid #dee2e6;
            background-color: #fff;
        }

            .header .admin-info {
                float: right;
            }

                .header .admin-info a {
                    margin-left: 15px;
                    color: #343a40;
                }
    </style>
</head>
<body>
    <div class="d-flex">
        <nav class="sidebar d-flex flex-column p-3">
            <a href="dashboard.html" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                <i class="fas fa-user-md fa-2x me-2"></i>
                <span class="fs-4">Trang Bác Sĩ</span>
            </a>
            <hr>
            <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item">
                    <a href="Quanlycakham.html" class="nav-link text-white">
                        <i class="fas fa-calendar-plus me-2"></i> Đăng Ký Ca Khám
                    </a>
                </li>
                <li>
                    <a href="quanlylichhen.html" class="nav-link text-white">
                        <i class="fas fa-calendar-check me-2"></i> Quản Lý Lịch Hẹn
                    </a>
                </li>
                <li>
                    <a href="quanlykethuoc.html" class="nav-link text-white">
                        <i class="fas fa-prescription-bottle-alt me-2"></i> Quản Lý Kê Thuốc
                    </a>
                </li>
            </ul>
            <hr>
            <div class="admin-info">
                <a href="#"><i class="fas fa-sign-out-alt"></i> Đăng Xuất</a>
            </div>
        </nav>
        <div class="content flex-grow-1">
            <header class="header d-flex justify-content-between align-items-center">
                <h2>Đăng Ký Ca Khám</h2>
                <div class="admin-info">
                    <span>Chào, Bác Sĩ</span>
                </div>
            </header>
            <div class="mt-4">
                <form>
                    <div class="mb-3">
                        <label for="date" class="form-label">Ngày Khám</label>
                        <input type="date" class="form-control" id="date" required>
                    </div>
                    <div class="mb-3">
                        <label for="time" class="form-label">Khung Giờ</label>
                        <select class="form-select" id="time" required>
                            <option value="">Chọn Khung Giờ</option>
                            <option value="08:00">08:00 - 09:00</option>
                            <option value="09:00">09:00 - 10:00</option>
                            <option value="10:00">10:00 - 11:00</option>
                            <option value="11:00">11:00 - 12:00</option>
                            <option value="13:00">13:00 - 14:00</option>
                            <option value="14:00">14:00 - 15:00</option>
                            <option value="15:00">15:00 - 16:00</option>
                            <option value="16:00">16:00 - 17:00</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="facility" class="form-label">Cơ Sở Khám</label>
                        <select class="form-select" id="facility" required>
                            <option value="">Chọn Cơ Sở</option>
                            <option value="co-so-1">Cơ Sở 1</option>
                            <option value="co-so-2">Cơ Sở 2</option>
                            <option value="co-so-3">Cơ Sở 3</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary">Đăng Ký</button>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
