@{
    Layout = "~/Views/Shared/_LayoutDoctor.cshtml";
    ViewBag.Title = "Đăng ký ca khám";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng Ký Ca Khám</title>
    @* Các thư viện CSS cần thiết (có thể đã có trong _LayoutDoctor) *@
    @* Nếu chưa, bạn có thể thêm vào đây *@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    @* Nội dung chính của trang đăng ký ca khám *@
    <div class="container mt-4">
        <h2>Đăng Ký Ca Khám</h2>
        <form>
            <div class="mb-3">
                <label for="date" class="form-label">Ngày Khám</label>
                <input type="date" class="form-control" id="date" required>
            </div>
            <div class="mb-3">
                <label for="time" class="form-label">Khung Giờ</label>
                <select class="form-select" id="time" required>
                    <option value="">Chọn Khung Giờ</option>
                    <option value="08:00">08:00 - 09:00</option>
                    <option value="09:00">09:00 - 10:00</option>
                    <option value="10:00">10:00 - 11:00</option>
                    <option value="11:00">11:00 - 12:00</option>
                    <option value="13:00">13:00 - 14:00</option>
                    <option value="14:00">14:00 - 15:00</option>
                    <option value="15:00">15:00 - 16:00</option>
                    <option value="16:00">16:00 - 17:00</option>
                </select>
            </div>
            <div class="mb-3">
                <label for="facility" class="form-label">Cơ Sở Khám</label>
                <select class="form-select" id="facility" required>
                    <option value="">Chọn Cơ Sở</option>
                    <option value="co-so-1">Cơ Sở 1</option>
                    <option value="co-so-2">Cơ Sở 2</option>
                    <option value="co-so-3">Cơ Sở 3</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Đăng Ký</button>
        </form>
    </div>

    @* Script cần thiết (có thể đã có trong _LayoutDoctor) *@
    @* Nếu chưa có, bạn có thể thêm vào đây *@
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
