@model WebsiteDatLichKhamBenh.Models.TinTuc

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.PageTitle = "Thêm Tin Tức";
}

<h3>Thêm Tin Tức</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(m => m.TieuDe)
        @Html.TextBoxFor(m => m.TieuDe, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.TieuDe)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.MoTa)
        @Html.TextBoxFor(m => m.MoTa, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.NoiDung)
        @Html.TextAreaFor(m => m.NoiDung, new { @class = "form-control", rows = 5 })
    </div>

    <button type="submit" class="btn btn-success">Lưu</button>
    @Html.ActionLink("Hủy", "Index", null, new { @class = "btn btn-secondary" })
}
