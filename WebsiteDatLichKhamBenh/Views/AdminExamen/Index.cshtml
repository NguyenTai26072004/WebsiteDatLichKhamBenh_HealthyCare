@model IEnumerable<WebsiteDatLichKhamBenh.Models.CaKham>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.PageTitle = "Quản lý ca khám";
}

<!-- Quản Lý Ca Khám -->
<div class="mt-5">
    <h3>Danh Sách Ca Khám</h3>

    <!-- Thanh tìm kiếm -->
    <form method="get" class="mt-3 mb-3">
        <div class="input-group">
            <input type="text" name="searchTerm" class="form-control" placeholder="Tìm kiếm mã ca khám hoặc bác sĩ" value="@ViewBag.SearchTerm" />
            <button class="btn btn-outline-secondary" type="submit">Tìm kiếm</button>
        </div>
    </form>

    <div class="table-responsive">
        <table class="table table-striped table-hover mt-3">
            <thead>
                <tr>
                    <th>Mã Ca Khám</th> <!-- Thêm cột Mã Ca Khám -->
                    <th>Ngày Khám</th>
                    <th>Bác Sĩ</th>
                    <th>Cơ Sở</th>
                    <th>Khung Giờ</th>
                    <th>Trạng Thái</th>
                    <th>Thao Tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.MaCaKham</td> <!-- Hiển thị Mã Ca Khám -->
                        <td>@item.NgayKham</td>
                        <td>@item.BacSi.tenBS</td>
                        <td>@item.CoSo.DiaChi</td>
                        <td>@item.KhungGio.GioKham</td>
                        <td>
                            @if (item.TrangThai == "Chờ duyệt")
                            {
                                <span class="badge bg-warning text-dark rounded-pill">@item.TrangThai</span>
                            }
                            else if (item.TrangThai == "Đang hoạt động")
                            {
                                <span class="badge bg-success text-white rounded-pill">@item.TrangThai</span>
                            }
                            else if (item.TrangThai == "Đã từ chối")
                            {
                                <span class="badge bg-danger text-white rounded-pill">@item.TrangThai</span>
                            }
                        </td>
                        <td>
                            @if (item.TrangThai == "Chờ duyệt")
                            {
                                <a class="btn btn-sm btn-success" href="@Url.Action("Approve", new { id = item.MaCaKham })" title="Phê duyệt">
                                    <i class="fas fa-check"></i>
                                </a>
                                <a class="btn btn-sm btn-danger" href="@Url.Action("Reject", new { id = item.MaCaKham })" title="Từ chối">
                                    <i class="fas fa-times"></i>
                                </a>
                            }
                            else if (item.TrangThai == "Đang hoạt động" || item.TrangThai == "Đã từ chối")
                            {
                                <button class="btn btn-secondary btn-sm" disabled title="Trạng thái không thể thay đổi">
                                    <i class="fas fa-lock"></i>
                                </button>
                                <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#statusModal" data-id="@item.MaCaKham" data-status="@item.TrangThai" title="Sửa trạng thái">
                                    <i class="fas fa-edit"></i>
                                </button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    <nav aria-label="Page navigation example">
        <ul class="pagination">
            <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Index", new { page = ViewBag.CurrentPage - 1, searchTerm = ViewBag.SearchTerm })" tabindex="-1">Trước</a>
            </li>
            @for (int i = 1; i <= Math.Ceiling((double)ViewBag.TotalCount / ViewBag.PageSize); i++)
            {
                <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = i, searchTerm = ViewBag.SearchTerm })">@i</a>
                </li>
            }
            <li class="page-item @(ViewBag.CurrentPage == Math.Ceiling((double)ViewBag.TotalCount / ViewBag.PageSize) ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Index", new { page = ViewBag.CurrentPage + 1, searchTerm = ViewBag.SearchTerm })">Sau</a>
            </li>
        </ul>
    </nav>
</div>

<!-- Modal Sửa Trạng Thái -->
<div class="modal fade" id="statusModal" tabindex="-1" aria-labelledby="statusModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="statusModalLabel">Sửa Trạng Thái</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="statusForm">
                    <input type="hidden" id="caKhamId" name="caKhamId" />
                    <div class="mb-3">
                        <label for="newStatus" class="form-label">Trạng Thái Mới</label>
                        <select id="newStatus" name="newStatus" class="form-control" required>
                            <option value="">-- Chọn trạng thái --</option>
                            <option value="Chờ duyệt">Chờ duyệt</option>
                            <option value="Đang hoạt động">Đang hoạt động</option>
                            <option value="Đã từ chối">Đã từ chối</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary">Cập nhật trạng thái</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var statusModal = document.getElementById('statusModal');
        statusModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var id = button.getAttribute('data-id');
            var currentStatus = button.getAttribute('data-status');

            var caKhamIdInput = document.getElementById('caKhamId');
            var newStatusSelect = document.getElementById('newStatus');

            caKhamIdInput.value = id;
            newStatusSelect.value = currentStatus;
        });

        document.getElementById('statusForm').addEventListener('submit', function (event) {
            event.preventDefault(); // Ngăn chặn form gửi đi theo cách truyền thống

            var formData = new FormData(this);
            var id = formData.get('caKhamId');
            var newStatus = formData.get('newStatus');

            // Gửi yêu cầu cập nhật trạng thái qua AJAX
            fetch(`/AdminExamen/UpdateStatus`, { // Đường dẫn đã được điều chỉnh
                method: 'POST',
                body: formData,
            })
                .then(response => {
                    if (response.ok) {
                        // Nếu cập nhật thành công, refresh lại trang
                        location.reload();
                    } else {
                        alert('Cập nhật trạng thái thất bại. Vui lòng thử lại.');
                    }
                })
                .catch(error => console.error('Error:', error));
        });
    });
</script>
