
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản Lý Lịch Hẹn</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #f8f9fa;
        }

        .sidebar {
            min-width: 250px;
            background-color: #343a40;
            color: #fff;
            min-height: 100vh;
        }

            .sidebar .nav-link {
                color: #fff;
            }

                .sidebar .nav-link:hover {
                    background-color: #495057;
                }

        .content {
            padding: 20px;
        }

        .header {
            padding: 15px;
            border-bottom: 1px solid #dee2e6;
            background-color: #fff;
        }

            .header .admin-info {
                float: right;
            }
    </style>
</head>
<body>
    <div class="d-flex">
        <nav class="sidebar d-flex flex-column p-3">
            <a href="dashboard.html" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                <i class="fas fa-user-md fa-2x me-2"></i>
                <span class="fs-4">Trang Bác Sĩ</span>
            </a>
            <hr>
            <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item">
                    <a href="@Url.Action("Index", "DoctorExaminationManagement")" class="nav-link text-white">
                        <i class="fas fa-calendar-plus me-2"></i> Đăng Ký Ca Khám
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "DoctorBookingManagement")" class="nav-link text-white active">
                        <i class="fas fa-calendar-check me-2"></i> Quản Lý Lịch Hẹn
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "DoctorPrescribeManagement")" class="nav-link text-white">
                        <i class="fas fa-prescription-bottle-alt me-2"></i> Quản Lý Kê Thuốc
                    </a>
                </li>
            </ul>
            <hr>
            <div class="admin-info">
                <a href="#"><i class="fas fa-sign-out-alt"></i> Đăng Xuất</a>
            </div>
        </nav>

        <div class="content flex-grow-1">
            <header class="header d-flex justify-content-between align-items-center">
                <h2>Quản Lý Lịch Hẹn</h2>
                <div class="admin-info">
                    <span>Chào, Bác Sĩ</span>
                </div>
            </header>
            <div class="mt-4">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Mã Lịch Hẹn</th>
                            <th>Tên Bệnh Nhân</th>
                            <th>Ngày Giờ</th>
                            <th>Trạng Thái</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>LH001</td>
                            <td>Nguyễn Văn A</td>
                            <td>15/10/2024, 14:00</td>
                            <td><span class="badge bg-success">Đã xác nhận</span></td>
                        </tr>
                        <tr>
                            <td>LH002</td>
                            <td>Trần Thị B</td>
                            <td>16/10/2024, 09:30</td>
                            <td><span class="badge bg-warning">Chưa xác nhận</span></td>
                        </tr>
                        <tr>
                            <td>LH003</td>
                            <td>Lê Văn C</td>
                            <td>17/10/2024, 11:00</td>
                            <td><span class="badge bg-danger">Đã hủy</span></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
