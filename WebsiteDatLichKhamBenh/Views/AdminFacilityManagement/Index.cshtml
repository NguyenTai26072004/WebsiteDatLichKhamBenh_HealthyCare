@model IEnumerable<WebsiteDatLichKhamBenh.Models.CoSo>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.PageTitle = "Quản lý cơ sở";
}

<div class="mt-5">
    <h3>Danh Sách Cơ Sở</h3>
    <a href="@Url.Action("Create")" class="btn btn-primary add-btn"><i class="fas fa-plus"></i> Thêm Cơ Sở</a>

    <div class="table-responsive">
        <table class="table table-striped table-hover mt-3">
            <thead>
                <tr>
                    <th>Mã Cơ Sở</th>
                    <th>Tên Bệnh Viện</th>
                    <th>Địa Chỉ</th>
                    <th>Thao Tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var coSo in Model)
                {
                    <tr>
                        <td>@coSo.idCoSo</td>
                        <td>@coSo.tenBenhVien</td>
                        <td>@coSo.DiaChi</td>
                        <td>
                            <a href="@Url.Action("Edit", new { id = coSo.idCoSo })" class="btn btn-sm btn-warning"><i class="fas fa-edit"></i></a>
                            <a href="@Url.Action("Delete", new { id = coSo.idCoSo })" class="btn btn-sm btn-danger"><i class="fas fa-trash-alt"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
