@model WebsiteDatLichKhamBenh.Models.CaKham

@{
    Layout = "~/Views/Shared/_LayoutDoctor.cshtml";
    ViewBag.PageTitle = "Đăng Ký Ca Khám";
}

<div class="container mt-5">
    <h3 class="text-center mb-4">Đăng Ký Ca Khám</h3>

    <!-- Form Đăng Ký Ca Khám -->
    <form method="post" action="@Url.Action("Create", "DoctorExaminationManagement")">
        @Html.AntiForgeryToken()

        <!-- Ngày Khám -->
        <div class="mb-3">
            <label for="NgayKham" class="form-label">Ngày Khám</label>
            <input type="date" class="form-control" id="NgayKham" name="NgayKham" required />
        </div>

        <!-- Khung Giờ -->
        <div class="mb-3">
            <label for="MaKhungGio" class="form-label">Khung Giờ</label>
            <select class="form-select" id="MaKhungGio" name="MaKhungGio" required>
                @foreach (var khungGio in ViewBag.KhungGioList)
                {
                    <option value="@khungGio.Value">@khungGio.Text</option>
                }
            </select>

        </div>

        <!-- Trạng Thái (Mặc định "Đang chờ duyệt") -->
        <input type="hidden" name="TrangThai" value="Đang chờ duyệt" />

        <!-- Bác Sĩ (Lấy từ session) -->
        <input type="hidden" name="idBS" value="@Session["UserID"]" />

        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-success">Đăng Ký</button>
            <a href="@Url.Action("Index", "DoctorExaminationManagement")" class="btn btn-secondary ms-3">Hủy</a>
        </div>
    </form>
</div>
