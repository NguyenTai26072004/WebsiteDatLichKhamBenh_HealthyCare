<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Quản Lý Ca Khám</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #f8f9fa;
        }

        .sidebar {
            min-width: 250px;
            background-color: #343a40;
            color: #fff;
            min-height: 100vh;
        }

            .sidebar .nav-link {
                color: #fff;
            }

                .sidebar .nav-link:hover {
                    background-color: #495057;
                }

        .admin-info a {
            color: #fff;
            background-color: #dc3545;
            padding: 10px 20px;
            border-radius: 5px;
            text-decoration: none;
            display: inline-block;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

            .admin-info a:hover {
                background-color: #c82333;
                color: #f8f9fa;
                text-decoration: none;
            }

        .content {
            padding: 20px;
        }

        .header {
            padding: 15px;
            border-bottom: 1px solid #dee2e6;
            background-color: #fff;
        }

            .header .admin-info {
                float: right;
            }

                .header .admin-info a {
                    margin-left: 15px;
                    color: #343a40;
                }
    </style>
</head>
<body>
    <div class="d-flex">
        <nav class="sidebar d-flex flex-column p-3">
            <a href="dashboard.html" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                <i class="fas fa-user-md fa-2x me-2"></i>
                <span class="fs-4">Trang Bác Sĩ</span>
            </a>
            <hr>
            <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item">
                    <a href="@Url.Action("Index", "DoctorExaminationManagement")" class="nav-link text-white active">
                        <i class="fas fa-calendar-plus me-2"></i> Đăng Ký Ca Khám
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "DoctorBookingManagement")" class="nav-link text-white">
                        <i class="fas fa-calendar-check me-2"></i> Quản Lý Lịch Hẹn
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "DoctorPrescribeManagement")" class="nav-link text-white">
                        <i class="fas fa-prescription-bottle-alt me-2"></i> Quản Lý Kê Thuốc
                    </a>
                </li>
            </ul>
            <hr>
            <div class="admin-info">
                <a href="@Url.Action("Logout", "DoctorAccount")"><i class="fas fa-sign-out-alt"></i> Đăng Xuất</a>
            </div>
        </nav>
        <div class="content flex-grow-1">
            <header class="header d-flex justify-content-between align-items-center">
                <h2>@ViewBag.PageTitle</h2>
                <div class="admin-info">
                    <span>Chào, @Session["UserName"]</span>
                </div>
            </header>
            <div class="container-fluid">
                @RenderBody()
            </div>
        </div>
    </div>

    <!-- Render các script được khai báo trong các view -->
    @RenderSection("Scripts", false)

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
