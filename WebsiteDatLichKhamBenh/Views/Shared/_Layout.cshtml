            {
                <button class="healthy-button" onclick="location.href='@Url.Action("Index", "CustomerRegister")'">Đăng Ký</button>
                <button class="healthy-button" onclick="location.href='@Url.Action("Index", "CustomerLogin")'">Đăng Nhập</button>
            }
        </div>
    </header>

    <main style="min-height: calc(100vh - 200px);">
        @RenderBody()
    </main>

    <!-- footer -->
    <footer class="footer">
        <div class="footer-logo">
            <img src="~/assets/img/healthy-life-logo.png" alt="Healthy Life logo">
        </div>
        <div class="footer-container">
