        </nav>
        <!-- Main Content -->
        <div class="content flex-grow-1">
            <!-- Header -->
            <header class="header d-flex justify-content-between align-items-center">
                <h2 class="mb-0">@ViewBag.PageTitle</h2>
                <div class="admin-info">
                    <span class="me-3">Chào, Admin</span>

                </div>
            </header>

            <!-- Render body -->
            <div class="container-fluid">
                @RenderBody()
            </div>
        </div>
    </div>

    <!-- Thông báo lỗi -->
    @if (TempData["ErrorMessage"] != null)
    {
        <div id="notification" class="notification error">
            <span class="icon"><i class="fas fa-times-circle"></i></span>
            <span id="notification-message">@TempData["ErrorMessage"]</span>
        </div>
    }

    <!-- Thông báo thành công -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div id="notification" class="notification success">
            <span class="icon"><i class="fas fa-check-circle"></i></span>
            <span id="notification-message">@TempData["SuccessMessage"]</span>
        </div>
    }


    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Custom JS -->
    <script>
    // Hàm giải mã các ký tự HTML
    function decodeHTML(html) {
        var element = document.createElement('div');
        element.innerHTML = html;
        return element.innerText || element.textContent;
    }

    // Hiển thị thông báo
    function showNotification(message, type) {
        const notification = document.getElementById('notification');
        const notificationMessage = document.getElementById('notification-message');

        // Giải mã nội dung thông báo
        notificationMessage.textContent = decodeHTML(message);

        // Thêm lớp thành công hoặc lỗi cho thông báo
        notification.classList.remove('success', 'error');
        notification.classList.add(type);

        // Hiển thị thông báo với animation
        notification.classList.add('show');

        // Ẩn thông báo sau 5 giây, với hiệu ứng
        setTimeout(() => {
            notification.classList.add('hide'); // Thêm lớp 'hide' để ẩn thông báo
        }, 5000);

        // Sau khi animation ẩn xong, xóa lớp 'show' và 'hide'
        setTimeout(() => {
            notification.classList.remove('show', 'hide'); // Xóa lớp để sẵn sàng cho lần hiển thị tiếp theo
        }, 5500); // Đảm bảo lớp 'hide' kết thúc trước khi xóa
    }

    // Kiểm tra và hiển thị thông báo nếu có từ TempData
    $(document).ready(function() {
        var errorMessage = '@TempData["ErrorMessage"]';
        var successMessage = '@TempData["SuccessMessage"]';

        if (errorMessage) {
            showNotification(errorMessage, 'error');
        } else if (successMessage) {
            showNotification(successMessage, 'success');
        }
    });
        $(document).ready(function () {
            $('.Nav_Responsive_Overview .nav-item_responsive a').on('click', function () {
                // Xóa lớp 'active' khỏi tất cả các nút
                $('.Nav_Responsive_Overview .nav-item_responsive a').removeClass('active');

                // Thêm lớp 'active' vào nút được chọn
                $(this).addClass('active');
            });
        });

    </script>



    <!-- Render phần Scripts -->
    @RenderSection("Scripts", required: false)
</body>
</html>
