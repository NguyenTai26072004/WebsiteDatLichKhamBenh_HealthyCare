@model IEnumerable<WebsiteDatLichKhamBenh.Models.BacSi>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f0f8ff;
        }

        .nav-header {
            text-align: center;
            padding: 20px;
            background-color: #e0f7fa;
        }

            .nav-header h1 {
                color: #39B34C;
                font-size: 24px;
                margin: 0;
            }

            .nav-header p {
                color: #000;
                font-size: 14px;
                margin: 5px 0 20px;
            }

        .search-bar {
            display: flex;
            justify-content: center;
            margin-bottom: 20px;
            position: relative;
        }

            .search-bar input {
                width: 50%;
                padding: 10px 20px 10px 40px;
                border-radius: 25px;
                border: 1px solid #ccc;
                font-size: 14px;
            }

            .search-bar i {
                position: absolute;
                left: 25%;
                top: 50%;
                transform: translateY(-50%);
                color: #aaa;
            }

        .container {
            padding: 20px;
        }

            .container h2 {
                font-size: 18px;
                color: #000;
                margin-bottom: 20px;
            }

        .filters {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
        }

            .filters select {
                padding: 10px;
                border-radius: 5px;
                border: 1px solid #ccc;
                font-size: 14px;
            }

        .doctor-grid {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
        }

        .doctor-card {
            width: 23%;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin: 10px 0;
            text-align: center;
            padding: 20px;
            box-sizing: border-box;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

            .doctor-card img {
                width: 100px;
                height: auto;
            }

            .doctor-card h3 {
                font-size: 16px;
                color: #000;
                margin: 10px 0;
            }

            .doctor-card .info {
                display: flex;
                justify-content: center;
                align-items: center;
                margin: 10px 0;
            }

                .doctor-card .info i {
                    color: #39B34C;
                    margin-right: 5px;
                }

                .doctor-card .info span {
                    font-size: 14px;
                    color: #000;
                }

            .doctor-card .specialty {
                background-color: #e0f7fa;
                padding: 5px 10px;
                border-radius: 5px;
                font-size: 14px;
                color: #000;
            }

            .doctor-card .book-button {
                background-color: #39B34C;
                color: #fff;
                padding: 10px;
                border: none;
                border-radius: 5px;
                font-size: 14px;
                cursor: pointer;
                width: 100%;
                margin-top: 10px;
            }

                .doctor-card .book-button:hover {
                    background-color: #39B34C;
                }

        .pagination {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }

            .pagination a {
                color: #39B34C;
                padding: 10px 15px;
                text-decoration: none;
                border: 1px solid #39B34C;
                margin: 0 5px;
                border-radius: 5px;
            }

                .pagination a:hover, .pagination a.active {
                    background-color: #39B34C;
                    color: #fff;
                }

        .fa-search {
            margin-left: 20px;
        }

        .search_icon {
            position: absolute;
            left: 340px !important
        }
    </style>
</head>
<body>
    <div class="nav-header">
        <h1>Đặt lịch khám qua Healthy Life</h1>
        <p>Để được tiếp đón ưu tiên và nhận sự hỗ trợ tận tình từ chúng tôi</p>
        <div class="search-bar">
            <i class="fas fa-search search_icon"></i>
            <input placeholder="Tìm tên bác sĩ, chuyên khoa" type="text" />
        </div>
    </div>
    <div class="container">
        <h2>Chọn bác sĩ</h2>
        <div class="filters">
            <select>
                <option>Chọn chuyên khoa</option>
            </select>
            <select>
                <option>Tất cả</option>
            </select>
        </div>
        <div class="doctor-grid">
            @foreach (var doctor in Model) // Vòng lặp để hiển thị danh sách bác sĩ
            {
                <div class="doctor-card">
                    <div class="img_doctor_container" style="width:100px; height:100px; border-radius:50%; margin: 0 auto; overflow: hidden;">
                        <img alt="@doctor.tenBS" src="@doctor.anhBS" /> <!-- Lấy ảnh từ Firebase -->
                    </div>
                    <h3>@doctor.tenBS</h3>
                    <div class="info">
                        <i class="fas fa-briefcase-medical"></i>
                        <span>@doctor.luotDat</span>
                        <i class="fas fa-star" style="margin-left: 10px;"></i>
                        <span>@doctor.diemDanhGia</span>
                    </div>
                    <div class="specialty">
                        @doctor.chuyenKhoa
                    </div>
                    <button class="book-button" onclick="location.href='@Url.Action("Index", "CustomerBooking")'">
                        Đặt Khám
                    </button>
                </div>
            }
        </div>
        <div class="pagination">
            <a class="active" href="#">1</a>
            <a href="#">2</a>
            <a href="#">3</a>
            <a href="#">4</a>
            <a href="#">5</a>
            <a href="#">></a>
        </div>
    </div>
</body>
</html>
