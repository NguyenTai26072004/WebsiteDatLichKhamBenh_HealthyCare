@model WebsiteDatLichKhamBenh.Controllers.CustomerBookingViewModel

@{
    ViewBag.Title = "Đặt Khám";
    var doctor = Model.Doctor; 
    var schedule = Model.Schedule; 
}

<html>
<head>
    <title>Doctor Appointment</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            padding: 0;
        }

        .container {
            width: 80%;
            margin: 20px auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .profile {
            display: flex;
            align-items: center;
        }

            .profile img {
                border-radius: 10px;
                width: 150px;
                height: 150px;
                object-fit: cover;
            }

        .profile-info {
            margin-left: 20px;
        }

            .profile-info h2 {
                margin: 0;
                font-size: 24px;
                font-weight: bold;
            }

            .profile-info .specialty {
                background-color: #e0e0e0;
                padding: 5px 10px;
                border-radius: 5px;
                display: inline-block;
                margin-top: 5px;
            }

        .stats {
            display: flex;
            align-items: center;
            margin-top: 10px;
        }

            .stats div {
                margin-right: 20px;
            }

            .stats i {
                color: #00c853;
                margin-right: 5px;
            }

        .share-button {
            margin-left: auto;
        }

            .share-button button {
                background-color: #3b5998;
                color: #fff;
                border: none;
                padding: 10px 20px;
                border-radius: 5px;
                cursor: pointer;
            }

        .schedule {
            margin-top: 20px;
        }

        .schedule-header {
            background-color: #e0f7fa;
            padding: 10px;
            border-radius: 5px;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

            .schedule-header i {
                color: #f44336;
                margin-right: 5px;
            }

        .schedule-title {
            margin-top: 10px;
            font-weight: bold;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .date {
            background-color: #e0f7fa;
            padding: 5px 10px;
            border-radius: 5px;
            cursor: pointer;
            display: flex;
            align-items: center;
            position: relative;
        }

            .date i {
                margin-left: 5px;
            }

        .time-slots {
            display: flex;
            flex-wrap: wrap;
            margin-top: 10px;
        }

            .time-slots button {
                background-color: #e0f7fa;
                border: 1px solid #00c853;
                border-radius: 5px;
                padding: 10px;
                margin: 5px;
                cursor: pointer;
                transition: background-color 0.3s;
            }

                .time-slots button:hover {
                    background-color: #00c853;
                    color: #fff;
                }

        .ui-datepicker {
            font-size: 14px;
        }

        #datepicker {
            position: absolute;
            top: 100%;
            left: 0;
            z-index: 10;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="profile">
            <img alt="@doctor.tenBS" src="@doctor.anhBS" />
            <div class="profile-info">
                <h2>@doctor.tenBS</h2>
                <div class="specialty">@doctor.chuyenKhoa</div>
                <div class="stats">
                    <div class="appointments">
                        <i class="fas fa-check-circle"></i>
                        Lượt hẹn khám: @doctor.luotDat
                    </div>
                    <div class="rating">
                        <i class="fas fa-star"></i>
                        Đánh giá: @doctor.diemDanhGia
                    </div>
                </div>
            </div>
            <div class="share-button">
                <button>
                    <i class="fab fa-facebook-f"></i>
                    Share
                </button>
            </div>
        </div>
        <div class="schedule">
            <div class="schedule-header">
                <div class="location">
                    <i class="fas fa-map-marker-alt"></i>
                    <div>
                        <strong>Bệnh Viện E</strong>
                        <br />
                        Số 87 - 89 Trần Cung, Nghĩa Tân, Cầu Giấy, Hà Nội
                    </div>
                </div>
            </div>
            <div class="schedule-title">
                Lịch khám tại viện
                <div class="date">
                    Ngày <span id="selected-date">04/10/2024</span>
                    <i class="fas fa-caret-down"></i>
                    <div id="datepicker" style="display:none;"></div>
                </div>
            </div>
            <div class="time-slots">
                @foreach (var item in schedule)
                {
                    <button>@item.GioKham</button>
                }
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>
    <script>
        $(function () {
            $("#datepicker").datepicker({
                dateFormat: "dd/mm/yy",
                onSelect: function (dateText) {
                    $("#selected-date").text(dateText);
                    $("#datepicker").hide();
                }
            });

            $(".date").on("click", function () {
                $("#datepicker").toggle();
            });
        });
    </script>
</body>
</html>
