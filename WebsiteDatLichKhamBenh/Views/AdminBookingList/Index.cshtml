@model IEnumerable<WebsiteDatLichKhamBenh.Models.LichKham>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.PageTitle = "Quản lý danh sách đặt lịch";
}

<!-- Quản Lý Danh Sách Đặt Lịch -->
<div class="mt-5">
    <h3>Danh Sách Đặt Lịch</h3>

    <!-- Thanh tìm kiếm -->
    <form method="get" class="mt-3 mb-3">
        <div class="input-group">
            <input type="text" name="searchTerm" class="form-control" placeholder="Tìm kiếm theo mã lịch khám hoặc tên bệnh nhân" value="@ViewBag.SearchTerm" />
            <button class="btn btn-outline-secondary" type="submit">Tìm kiếm</button>
        </div>
    </form>

    <div class="table-responsive">
        <table class="table table-striped table-hover mt-3">
            <thead>
                <tr>
                    <th>Mã Lịch Khám</th>
                    <th>Tên Bệnh Nhân</th>
                    <th>Ngày Đặt Lịch</th>
                    <th>Giờ Đặt Lịch</th>
                    <th>Trạng Thái</th>
                    <th>Thao Tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.MaLichKham</td>
                        <td>@item.BenhNhan.tenBenhNhan</td>
                        <td>@item.NgayDatLich</td>
                        <td>@item.GioDatLich</td>
                        <td>
                            @if (item.TrangThai == "Đã xác nhận")
                            {
                                <span class="badge bg-success text-white rounded-pill">@item.TrangThai</span>
                            }
                            else if (item.TrangThai == "Chờ xác nhận")
                            {
                                <span class="badge bg-warning text-dark rounded-pill">@item.TrangThai</span>
                            }
                            else if (item.TrangThai == "Đã hủy")
                            {
                                <span class="badge bg-danger text-white rounded-pill">@item.TrangThai</span>
                            }
                        </td>
                        <td>
                            @if (item.TrangThai == "Chờ xác nhận")
                            {
                                <a class="btn btn-sm btn-success" href="@Url.Action("Approve", new { id = item.MaLichKham })" title="Xác nhận">
                                    <i class="fas fa-check"></i>
                                </a>
                                <a class="btn btn-sm btn-danger" href="@Url.Action("Cancel", new { id = item.MaLichKham })" title="Hủy">
                                    <i class="fas fa-times"></i>
                                </a>
                            }
                            else
                            {
                                <button class="btn btn-secondary btn-sm" disabled title="Trạng thái không thể thay đổi">
                                    <i class="fas fa-lock"></i>
                                </button>
                                <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#statusModal" data-id="@item.MaLichKham" data-status="@item.TrangThai" title="Sửa trạng thái">
                                    <i class="fas fa-edit"></i>
                                </button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    <nav aria-label="Page navigation example">
        <ul class="pagination">
            <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Index", new { page = ViewBag.CurrentPage - 1, searchTerm = ViewBag.SearchTerm })" tabindex="-1">Trước</a>
            </li>
            @for (int i = 1; i <= Math.Ceiling((double)ViewBag.TotalCount / ViewBag.PageSize); i++)
            {
                <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = i, searchTerm = ViewBag.SearchTerm })">@i</a>
                </li>
            }
            <li class="page-item @(ViewBag.CurrentPage == Math.Ceiling((double)ViewBag.TotalCount / ViewBag.PageSize) ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Index", new { page = ViewBag.CurrentPage + 1, searchTerm = ViewBag.SearchTerm })">Sau</a>
            </li>
        </ul>
    </nav>
</div>

<!-- Modal Sửa Trạng Thái -->
<div class="modal fade" id="statusModal" tabindex="-1" aria-labelledby="statusModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="statusModalLabel">Sửa Trạng Thái</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="statusForm">
                    <input type="hidden" id="lichKhamId" name="lichKhamId" />
                    <div class="mb-3">
                        <label for="newStatus" class="form-label">Trạng Thái Mới</label>
                        <select id="newStatus" name="newStatus" class="form-control" required>
                            <option value="">-- Chọn trạng thái --</option>
                            <option value="Đã xác nhận">Đã xác nhận</option>
                            <option value="Đã hủy">Đã hủy</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary">Cập nhật</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Thiết lập modal khi nhấn nút sửa trạng thái
        $('#statusModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var lichKhamId = button.data('id');
            var currentStatus = button.data('status');

            var modal = $(this);
            modal.find('#lichKhamId').val(lichKhamId);
            modal.find('#newStatus').val(currentStatus);
        });

        // Gửi form cập nhật trạng thái
        $('#statusForm').on('submit', function (e) {
            e.preventDefault();
            var formData = $(this).serialize();

            $.ajax({
                type: "POST",
                url: '@Url.Action("UpdateStatus")',
                data: formData,
                success: function (response) {
                    if (response.success) {
                        location.reload(); // Làm mới trang để cập nhật danh sách
                    } else {
                        alert('Cập nhật thất bại. Vui lòng thử lại!');
                    }
                }
            });
        });
    </script>
}
