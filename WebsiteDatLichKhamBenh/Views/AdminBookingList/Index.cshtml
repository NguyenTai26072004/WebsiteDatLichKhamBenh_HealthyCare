@model IEnumerable<WebsiteDatLichKhamBenh.Models.LichKhamViewModel>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.PageTitle = "Quản lý lịch hẹn";
}

<div class="mt-5">
    <h3>Danh Sách Lịch Hẹn</h3>
    <button class="btn btn-primary add-btn" onclick="location.href='@Url.Action("Create", "AdminBookingList")'">
        <i class="fas fa-plus"></i> Thêm Lịch Hẹn
    </button>

    <div class="table-responsive">
        <table class="table table-striped table-hover mt-3">
            <thead>
                <tr>
                    <th>Mã Lịch Hẹn</th>
                    <th>Tên Bệnh Nhân</th>
                    <th>Tên Bác Sĩ</th>
                    <th>Ngày Hẹn</th>
                    <th>Giờ Hẹn</th>
                    <th>Trạng Thái</th>
                    <th>Thao Tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.MaLichKham</td>
                        <td>@item.TenBenhNhan</td>
                        <td>@item.TenBacSi</td>
                        <td>@item.NgayKham.ToString("yyyy-MM-dd")</td>
                        <td>@item.GioKham</td>
                        <td>@item.TrangThai</td>
                        <td>
                            <button class="btn btn-sm btn-warning" onclick="location.href='@Url.Action("Edit", "AdminBookingList", new { id = item.MaLichKham })'">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button class="btn btn-sm btn-danger" onclick="if(confirm('Bạn có chắc chắn muốn xóa không?')) location.href='@Url.Action("Delete", "AdminBookingList", new { id = item.MaLichKham })'">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    <nav aria-label="Page navigation example">
        <ul class="pagination">
            <li class="page-item disabled"><a class="page-link" href="#" tabindex="-1">Trước</a></li>
            <li class="page-item"><a class="page-link" href="#">1</a></li>
            <li class="page-item active" aria-current="page"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item"><a class="page-link" href="#">Sau</a></li>
        </ul>
    </nav>
</div>
