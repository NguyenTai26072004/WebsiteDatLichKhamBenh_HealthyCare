            .pagination li.active a, .pagination li.active a:hover {
                z-index: 2;
                color: #fff;
                cursor: default;
                background-color: #337ab7;
                border-color: #337ab7;
            }

            .pagination li a:hover {
                background-color: #eee;
            }
</style>