@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <title>
        News Page
    </title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            padding: 0;
        }

        .container {
            width: 60%;
            margin: 20px auto;
        }

        .news-item {
            background-color: #fff;
            border: 1px solid #ddd;
            border-radius: 8px;
            margin-bottom: 20px;
            padding: 20px;
            display: flex;
            align-items: flex-start;
        }

            .news-item img {
                width: 180px;
                height: 120px;
                border-radius: 8px;
                margin-right: 20px;
            }

        .news-content {
            flex: 1;
        }

        .news-title {
            font-size: 20px;
            font-weight: bold;
            margin: 0 0 10px;
        }

            .news-title a {
                color: #000;
                text-decoration: none;
            }

                .news-title a:hover {
                    color: #000;
                    text-decoration: none;
                }

        .news-description {
            font-size: 16px;
            color: #555;
            margin: 0 0 10px;
        }

        .news-meta {
            font-size: 14px;
            color: #999;
        }

            .news-meta i {
                margin-right: 5px;
            }
    </style>
</head>
<body>

    

    <div class="container">
        @foreach (var item in Model)
        {
            <div class="news-item">
                <a href="@Url.Action("Details", "CustomerNews", new { id = item.idTinTuc })">
                    <img src="@item.HinhAnh" alt="@item.TieuDe" width="180" height="120" />
                </a>
                <div class="news-content">
                    <div class="news-title">
                        <a href="@Url.Action("Details", "CustomerNews", new { id = item.idTinTuc })">
                            @item.TieuDe
                        </a>
                    </div>
                    <div class="news-description">
                        @item.MoTa
                    </div>
                </div>
            </div>
        }
    </div>
</body>
</html>
