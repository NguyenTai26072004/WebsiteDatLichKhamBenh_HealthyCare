@model WebsiteDatLichKhamBenh.Models.Account

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.PageTitle = "Chỉnh Sửa Tài Khoản";
}

<h3>Chỉnh Sửa Tài Khoản</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(m => m.idAccount)

    <div class="form-group">
        @Html.LabelFor(m => m.TaiKhoan)
        @Html.TextBoxFor(m => m.TaiKhoan, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.TaiKhoan, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.MatKhau)
        @Html.TextBoxFor(m => m.MatKhau, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.MatKhau, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Role)
        @Html.TextBoxFor(m => m.Role, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Role, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
    @Html.ActionLink("Hủy", "Index", null, new { @class = "btn btn-secondary" })
}
