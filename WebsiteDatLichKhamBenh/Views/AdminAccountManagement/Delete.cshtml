@model WebsiteDatLichKhamBenh.Models.Account
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="text-danger">Xác nhận xóa tài khoản</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="alert alert-warning">
        <strong>Thông tin tài khoản:</strong>
        <div><strong>Tên tài khoản:</strong> @Html.DisplayFor(model => model.TaiKhoan)</div>
    </div>
    <div class="alert alert-danger">
        <strong>Chú ý:</strong> Bạn có chắc chắn muốn xóa tài khoản này không?
    </div>
    <div>
        <p>
            @Html.ActionLink("Hủy", "Index", null, new { @class = "btn btn-secondary" }) |
            <input type="submit" value="Xóa" class="btn btn-danger" />
        </p>
    </div>
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger mt-3">
        @Html.ValidationSummary()
    </div>
}
