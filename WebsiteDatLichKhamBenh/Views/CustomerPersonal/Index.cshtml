@model WebsiteDatLichKhamBenh.Models.PersonalViewModel

@{
    ViewBag.Title = "Thông Tin Bệnh Nhân";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <title>Thông Tin Bệnh Nhân</title>
    <style>
       /* Body and container styling */
body {
    font-family: 'Arial', sans-serif;
    background-color: #f9f9f9;
    margin: 0;
    padding: 0;
}

.container {
    display: flex;
    padding: 30px;
}

/* Sidebar styling */
.sidebar {
    width: 25%;
    background-color: #fff;
    border-radius: 10px;
    padding: 20px;
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
    margin-right: 20px;
    transition: all 0.3s ease;
}

.sidebar:hover {
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.2);
}

.sidebar h2 {
    color: #4CAF50;
    font-size: 26px;
    margin-bottom: 20px;
    border-bottom: 2px solid #4CAF50;
    padding-bottom: 10px;
}

.sidebar p {
    font-size: 18px;
    color: #333;
    margin: 15px 0;
    padding: 10px 15px;
    border-radius: 6px;
    transition: all 0.2s ease;
    cursor: pointer;
}

.sidebar p:hover {
    background-color: #4CAF50;
    color: #fff;
}

.sidebar p.active {
    background-color: #4CAF50;
    color: #fff;
    font-weight: bold;
}

/* Link styling */
.sidebar a {
    text-decoration: none;
    color: inherit;
}

/* Content styling */
.content {
    width: 75%;
    background-color: #fff;
    border-radius: 10px;
    padding: 30px;
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
}

.content h2 {
    font-size: 26px;
    color: #333;
    margin-bottom: 30px;
    font-weight: bold;
}

/* Info Section */
.info {
    margin-left: 20px;
}

.info p {
    font-size: 18px;
    color: #555;
    margin: 20px 0;
}

.info span {
    font-weight: bold;
    color: #4CAF50;
}

.info .value {
    font-weight: normal;
    color: #333;
}

.info .row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
}

.info .row p {
    margin: 0;
    flex: 1;
}

.info .row p strong {
    color: #333;
}

/* Edit button */
.edit-button {
    text-align: right;
    margin-top: 30px;
}

.edit-button button {
    background-color: #4CAF50;
    color: white;
    border: none;
    padding: 12px 20px;
    border-radius: 6px;
    font-size: 16px;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

.edit-button button:hover {
    background-color: #45a049;
}

.note {
    color: red;
    font-weight: bold;
}


    </style>
</head>
<body>
    <div class="container">
        <div class="sidebar">
            <h2>Menu</h2>
            <p class="active">Thông tin bệnh nhân</p>
            <a href="@Url.Action("Index", "CustomerHistory")">
                <p>Lịch sử đặt lịch</p>
            </a>
        </div>
        <div class="content">
            <h2>THÔNG TIN BỆNH NHÂN</h2>
            <div class="info">
                <div class="row">
                    <p><strong>Họ và tên:</strong> @Model.tenBenhNhan</p>
                    <p><strong>SĐT:</strong> @Model.SDT</p>
                </div>
                <div class="row">
                    <p><strong>Ngày sinh:</strong> @((Model.ngaySinh)?.ToString("dd/MM/yyyy"))</p>
                    <p><strong>Giới tính:</strong> @Model.GioiTinh</p>
                </div>
                <p><strong>Email:</strong> @Model.Email</p>

                <!-- Hiển thị Tiền sử bệnh -->
                <p>
                    <strong>Tiền sử bệnh án:</strong>
                    @if (Model.TienSuBenh != null && Model.TienSuBenh.Any())
                    {
                        foreach (var tsb in Model.TienSuBenh)
                        {
                            <span class="value">@tsb</span><br />
                        }
                    }
                    else
                    {
                        <span class="note">Cần được bổ sung</span>
                    }
                </p>

                <!-- Hiển thị Dị ứng -->
                <p>
                    <strong>Dị ứng:</strong>
                    @if (Model.DiUng != null && Model.DiUng.Any())
                    {
                        foreach (var du in Model.DiUng)
                        {
                            <span class="value">@du</span><br />
                        }
                    }
                    else
                    {
                        <span class="note">Cần được bổ sung</span>
                    }
                </p>
            </div>


            <div class="edit-button">
                <a href="@Url.Action("Edit", "CustomerPersonal")">
                    <button>Chỉnh sửa</button>
                </a>
            </div>
        </div>
    </div>
</body>
</html>
