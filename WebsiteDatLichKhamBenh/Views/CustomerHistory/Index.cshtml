@{
    ViewBag.Title = "Lịch Sử Đặt Lịch";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <title>Lịch Sử Đặt Lịch</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f7f6;
            margin: 0;
            padding: 0;
            color: #333;
        }

        .container {
            display: flex;
            padding: 20px;
        }

        .sidebar {
            width: 25%;
            background-color: #ffffff;
            border-radius: 15px;
            padding: 25px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            margin-right: 30px;
            transition: all 0.3s ease;
        }

            .sidebar a {
                text-decoration: none;
            }

            .sidebar h2 {
                color: #4CAF50;
                font-size: 28px;
                margin-bottom: 20px;
                border-bottom: 2px solid #4CAF50;
                padding-bottom: 10px;
                font-weight: bold;
            }

            .sidebar p {
                font-size: 18px;
                color: #444;
                margin: 12px 0;
                padding: 10px 15px;
                border-radius: 6px;
                transition: background-color 0.3s, color 0.3s;
            }

                .sidebar p:hover {
                    background-color: #4CAF50;
                    color: #fff;
                    cursor: pointer;
                }

                .sidebar p.active {
                    font-weight: bold;
                    font-size: 20px;
                    background-color: #4CAF50;
                    color: #fff;
                }

        .content {
            width: 75%;
            background-color: #ffffff;
            border-radius: 15px;
            padding: 25px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
        }

            .content h1 {
                font-size: 28px;
                color: #333;
                margin-bottom: 20px;
            }

        .appointment {
            border: 1px solid #4CAF50;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 20px;
            transition: all 0.3s ease;
        }

            .appointment:hover {
                box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
                transform: translateY(-5px);
            }

        .appointment-header {
            display: flex;
            justify-content: space-between;
            font-size: 14px;
            color: #666;
            margin-bottom: 10px;
        }

        .appointment-details {
            font-size: 16px;
            color: #333;
        }

            .appointment-details p {
                margin: 10px 0;
                line-height: 1.5;
            }

        .status {
            display: inline-block;
            padding: 8px 15px;
            border-radius: 12px;
            font-size: 14px;
            font-weight: bold;
            text-align: center;
            color: #fff;
        }

            .status.pending {
                background-color: #f0ad4e;
            }

            .status.approved {
                background-color: #5bc0de;
            }

            .status.done {
                background-color: #5cb85c;
            }

            .status.drug {
                background-color: #0275d8;
                text-decoration: none;
            }

            .status.deleted {
                background-color: #d9534f;
            }

        /* Thông báo khi chưa có lịch sử đặt lịch */
        .no-appointments {
            font-size: 18px;
            color: #666;
            text-align: center;
            margin-top: 30px;
            font-style: italic;
        }

        /* Nút "Đánh giá bác sĩ" */
        /* Nút "Đánh giá bác sĩ" */
        .status.review {
            background-color: #ff6f61; /* Màu cam san hô tươi sáng */
            text-decoration: none;
            padding: 8px 15px;
            border-radius: 12px;
            font-size: 14px;
            font-weight: bold;
            color: #fff;
            transition: background-color 0.3s;
        }

            .status.review:hover {
                background-color: #e45750; /* Màu cam đỏ đậm khi hover */
            }

        /* Nút "Đã đánh giá" */
        .status.done.reviewed {
            background-color: #8e44ad; /* Màu tím đậm */
            text-decoration: none;
            padding: 8px 15px;
            border-radius: 12px;
            font-size: 14px;
            font-weight: bold;
            color: #fff;
            transition: background-color 0.3s;
        }

            .status.done.reviewed:hover {
                background-color: #732d91; /* Màu tím đậm hơn khi hover */
            }

        .toast {
            visibility: hidden; /* Ẩn toast mặc định */
            min-width: 250px;
            margin-left: -125px;
            background-color: #4CAF50;
            color: #fff;
            text-align: center;
            border-radius: 2px;
            padding: 16px;
            position: fixed;
            z-index: 1;
            left: 50%;
            bottom: 30px;
            font-size: 17px;
            opacity: 0;
            transition: opacity 0.5s, visibility 0s linear 0.5s;
        }

            .toast.show {
                visibility: visible;
                opacity: 1;
                transition: opacity 0.5s, visibility 0s;
            }

    </style>
</head>
<body>
    <div class="container">
        <div class="sidebar">
            <h2>Menu</h2>
            <a href="@Url.Action("Index", "CustomerPersonal")"><p>Thông tin bệnh nhân</p></a>
            <p class="active">Lịch sử đặt lịch</p>
        </div>
        <div class="content">
            <h1>LỊCH SỬ ĐẶT LỊCH</h1>
            <!-- Thông báo Toast -->
            <div id="toastMessage" class="toast">
                Cảm ơn bạn đã đánh giá!
            </div>
            <!-- Kiểm tra nếu không có lịch khám -->
            @if (Model.Count == 0)
            {
                <div class="no-appointments">
                    <p>Bạn chưa có lịch sử đặt lịch</p>
                </div>
            }
            else
            {

                if (TempData["Message"] != null)
                {
                    <script>
                    // Kiểm tra xem TempData có thông báo không
                    var toastMessage = '@TempData["Message"]';
                    if (toastMessage) {
                        // Hiển thị thông báo Toast
                        var toast = document.getElementById("toastMessage");
                        toast.innerHTML = toastMessage;  // Cập nhật nội dung thông báo
                        toast.className = "toast show";

                        // Ẩn thông báo sau 3 giây
                        setTimeout(function () {
                            toast.className = toast.className.replace("show", "");
                        }, 3000);
                    }
                    </script>
                }

                foreach (var appointment in Model)
                {
                    <div class="appointment">
                        <div class="appointment-header">
                            <span>@appointment.GioDatLich.ToString(@"hh\:mm") | @appointment.NgayDatLich.ToString("dd/MM/yyyy")</span>
                        </div>
                        <div class="appointment-details">
                            <p><strong>Khung giờ khám bệnh:</strong> @appointment.GioKham.ToString(@"hh\:mm")</p>
                            <p><strong>Ngày khám bệnh:</strong> @appointment.NgayKhamBenh.ToString("dd/MM/yyyy")</p>
                            <p><strong>Bác sĩ phụ trách:</strong> @appointment.BacSi</p>
                            <p><strong>Chuyên khoa:</strong> @appointment.ChuyenKhoa</p>
                            <p><strong>Địa chỉ khám bệnh:</strong> @appointment.DiaChi</p>

                            @switch (appointment.TrangThai)
                            {
                                case "Đang chờ duyệt":
                                    <span class="status pending">Chưa được duyệt</span>
                                    break;
                                case "Đã được duyệt":
                                    <span class="status approved">Đã được duyệt</span>
                                    break;
                                case "Đã từ chối":
                                    <span class="status deleted">Đã từ chối</span>
                                    break;
                                case "Đã khám":
                                    <span class="status done">Đã khám</span>

                                    <a href="@Url.Action("XemDonThuoc", "CustomerHistory", new { maLichKham = appointment.Id })" class="status drug">
                                        Xem đơn thuốc
                                    </a>

                                    if (appointment.ReviewStatus == "Đã đánh giá")
                                    {

                                    }
                                    else
                                    {
                                        <a href="@Url.Action("DanhGiaBacSi", "CustomerHistory", new { maLichKham = appointment.Id })" class="status review">Đánh giá bác sĩ</a>
                                    }
                                    break;
                            }
                        </div>
                    </div>
                }

            }
        </div>
    </div>

    

</body>
</html>
