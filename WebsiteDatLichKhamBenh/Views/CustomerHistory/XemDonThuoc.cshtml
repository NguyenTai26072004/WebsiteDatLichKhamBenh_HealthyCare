@model WebsiteDatLichKhamBenh.Models.CustomerPrescribeViewModel

@{
    ViewBag.Title = "Chi Tiết Đơn Thuốc";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="prescription-container">
    <div class="prescription-header">
        <h1>Chi Tiết Đơn Thuốc</h1>
        <p><strong>Mã Đơn Thuốc:</strong> @Model.MaDonThuoc</p>
        <p><strong>Ngày Kê Đơn:</strong> @(Model.NgayKeDon.HasValue ? Model.NgayKeDon.Value.ToString("dd/MM/yyyy") : "Chưa xác định")</p>
        <p><strong>Ghi Chú:</strong> @Model.GhiChu Không có ghi chú.</p>
    </div>

    <div class="prescription-details">
        <table class="styled-table">
            <thead>
                <tr>
                    <th>Tên Thuốc</th>
                    <th>Liều Lượng</th>
                    <th>Số Lượng</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.CustomerPrescriptionDetails != null && Model.CustomerPrescriptionDetails.Any())
                {
                    foreach (var detail in Model.CustomerPrescriptionDetails)
                    {
                        <tr>
                            <td>@detail.TenThuoc</td>
                            <td>@detail.LieuLuong</td>
                            <td>@detail.SoLuong</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="text-center">Không có thông tin chi tiết đơn thuốc.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f4f7f6;
        color: #333;
        margin: 0;
        padding: 0;
    }

    .prescription-container {
        max-width: 800px;
        margin: 40px auto;
        background: #fff;
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    .prescription-header h1 {
        font-size: 26px;
        color: #4CAF50;
        border-bottom: 2px solid #4CAF50;
        padding-bottom: 10px;
        margin-bottom: 20px;
    }

    .prescription-header p {
        font-size: 16px;
        margin: 8px 0;
        color: #555;
    }

    .prescription-details {
        margin-top: 20px;
    }

    .styled-table {
        width: 100%;
        border-collapse: collapse;
        font-size: 16px;
        text-align: left;
    }

        .styled-table thead tr {
            background-color: #4CAF50;
            color: #fff;
            text-align: left;
            font-weight: bold;
        }

        .styled-table th,
        .styled-table td {
            padding: 12px 15px;
            border: 1px solid #ddd;
        }

        .styled-table tbody tr:nth-child(even) {
            background-color: #f3f3f3;
        }

        .styled-table tbody tr:hover {
            background-color: #f1f1f1;
        }

        .styled-table tbody tr td.text-center {
            text-align: center;
            font-style: italic;
            color: #666;
        }
</style>
